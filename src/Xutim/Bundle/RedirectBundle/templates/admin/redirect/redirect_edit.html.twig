{% extends '@XutimCore/admin/modalBase.html.twig' %}

{% set pageTitle = 'Edit redirect'|trans({}, 'admin')|capitalize %}
{% block pageTitle %}{{ pageTitle }}{% endblock %}

{% block breadcrumbHeader %}
    <twig:Xutim:Admin:Breadcrumbs>
        <li class="breadcrumb-item">{{ pageTitle }}</li>
    </twig:Xutim:Admin:Breadcrumbs>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}

{% block stream_success %}
    <turbo-stream action="replace" targets="#redirect-row-{{ redirect.id }}">
        <template>
            {{
                include('@XutimRedirect/admin/redirect/_redirect_row.html.twig')
            }}
        </template>
    </turbo-stream>
    <turbo-stream action="update" target="modal">
        <template></template>
    </turbo-stream>
{% endblock %}
