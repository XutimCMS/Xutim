<tr id="redirect-row-{{redirect.id}}">
    <td>
        <a
            href="{{ path('admin_redirect_edit', {id: redirect.id})}}"
            data-turbo-frame="modal"
        >
            {{ redirect.source }}
        </a>
    </td>
    <td>
        {{ redirect.targetContentTranslation.title }}
        {% if redirect.targetContentTranslation.hasPage() %}
            {% set route = 'admin_page_show_by_slug' %}
        {% else %}
            {% set route = 'admin_article_show_by_slug' %}
        {% endif %}

        <a
            href="{{ path(route, {'slug': redirect.targetContentTranslation.slug}) }}"
            data-turbo-frame="_top"
        >
            <twig:ux:icon name="tabler:external-link" class="w-3 h-3" />
        </a>
    </td>
    {#
    <td>
        {{ redirect.locale }}
    </td>
    #}
    <td>
        {% if redirect.permanent %}
            <span class="status status-danger">
                {{ 'yes'|trans({}, 'admin') }}
            </span>
        {% else %}
            <span class="status status-green">
                {{ 'no'|trans({}, 'admin') }}
            </span>
        {% endif %}
    </td>
    <td>
        <twig:Xutim:Admin:ModalDialog
            class="btn btn-outline-danger float-end"
            modalDialogColor="danger"
            action="{{ path('admin_redirect_delete', {id: redirect.id}) }}"
            confirmActionLabel="{{ 'delete'|trans({}, 'admin')|capitalize }}"
        >
            <twig:Xutim:Admin:Icon name="trash" />
            {{ 'delete'|trans({}, 'admin')|capitalize }}
        </twig:Xutim:Admin:ModalDialog>
    </td>
</tr>
