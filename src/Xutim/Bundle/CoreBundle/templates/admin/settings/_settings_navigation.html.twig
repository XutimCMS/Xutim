    <h4 class="subheader">Super admin settings</h4>
    <div class="list-group list-group-transparent">
        <a
            href="{{ path('admin_settings_site') }}"
            class="list-group-item list-group-item-action {% if app.current_route == 'admin_settings_site' %}active{% endif %}"
        >
            {{ 'Site'|trans({}, 'admin')|capitalize }}
