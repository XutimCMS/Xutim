        <a
            href="{{ path('admin_menu_list') }}"
            class="list-group-item list-group-item-action {% if app.current_route starts with 'admin_menu' %}active{% endif %}"
        >
            {{ 'Menu'|trans({}, 'admin')|capitalize }}
        </a>
    </div>
</div>
