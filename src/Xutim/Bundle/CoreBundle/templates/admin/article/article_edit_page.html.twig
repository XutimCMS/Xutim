{% extends '@XutimCore/admin/modalBase.html.twig' %}
{% import '@XutimCore/admin/common/forms.html.twig' as forms %}
{% set title = 'edit page'|trans({}, 'admin')|capitalize %}

{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header p-3">
            <h3 class="card-title">{{ title }}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{
                form_row(form.page, {
                    attr: {
                        'data-controller': 'tom-select',
                    },
                })
            }}

            {{ form_row(form.submit) }}
            {{ form_row(form._token) }}
            {{ form_end(form, {render_rest: false}) }}
        </div>
    </div>
{% endblock %}

{% block stream_success %}
    <turbo-stream action="replace" targets="#article-page-link">
        <template>
            <a
                href="{{ path('admin_article_show', {id: article.page.id}) }}"
                id="article-page-link"
            >
                {{ article.page.defaultTranslation.title|truncate(27) }}
            </a>
        </template>
    </turbo-stream>
{% endblock %}
