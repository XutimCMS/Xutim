{% extends '@XutimCore/admin/base.html.twig' %}

{% block pageTitle %}{{
        'Translation revisions'|trans({}, 'admin')|capitalize
    }}{% endblock %}

{% block body %}
    <div class="row"
         data-controller="revision-filter"
         data-revision-filter-base-url-value="{{ path('admin_content_translation_revisions', {id: translation.id}) }}">
        <div class="col-md-3">
            {% if (events|length) > 0 %}
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            {{ 'Revisions'|trans({}, 'admin') }}
                        </h3>
                    </div>

                    <div class="px-3 pt-3">
                        <div class="small text-muted mb-1">
                            {{ 'Comparing'|trans({}, 'admin') }}
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-secondary text-white">
                                {{ selectedOld.recordedAt|date('d M Y H:i') }}
                            </span>
                            <span class="text-muted">â†’</span>
                            <span class="badge bg-primary text-white">
                                {{ selectedNew.recordedAt|date('d M Y H:i') }}
                            </span>
                        </div>
                        <div class="small text-muted mt-2 mb-4">
                            {{ 'Select 2 revisions to compare'|trans({}, 'admin') }}
                        </div>
                    </div>

                    <div class="list-group list-group-flush">
                        {% set total = events|length %}
                        {% for event in events %}
                            {%
                                set author = usernames[event.userIdentifier].name is defined ? usernames[event.userIdentifier].name : event.userIdentifier
                            %}
                            <label class="list-group-item d-flex align-items-center gap-2 cursor-pointer">
                                <input
                                    type="checkbox"
                                    class="form-check-input m-0"
                                    value="{{ event.id }}"
                                    data-revision-filter-target="checkbox"
                                    data-action="revision-filter#selectRevision"
                                    data-index="{{ loop.index0 }}"
                                    {{ selectedOld.id == event.id or selectedNew.id == event.id ? 'checked' : '' }}
                                />
                                <div class="text-muted" style="width: 1.5rem">
                                    {{ total - loop.index0 }}
                                </div>
                                <div class="flex-fill">
                                    <div class="fw-semibold">
                                        {{ event.recordedAt|date('d M Y H:i') }}
                                    </div>
                                    <div class="small text-secondary">
                                        {{ author }}
                                    </div>
                                </div>
                            </label>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-title">No revision</h4>
                    <div class="text-secondary">
                        {{
                            'There is no revision to compare.'|trans({}, 'admin')
                        }}
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-md-9">
            <div class="d-flex justify-content-end align-items-center mb-3">
                <button
                    type="button"
                    class="btn btn-sm btn-outline-primary"
                    data-action="revision-filter#toggle"
                    data-revision-filter-target="toggleBtn"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-filter"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M4 4h16v2.172a2 2 0 0 1 -.586 1.414l-4.414 4.414v7l-6 2v-8.5l-4.48 -4.928a2 2 0 0 1 -.52 -1.345v-2.227z" />
                    </svg>
                    {{ 'Only Changed'|trans({}, 'admin') }}
                </button>
            </div>

            <h2>{{ 'Intro title'|trans({}, '') }}</h2>

            <p>
                {% if preTitleDiff is defined and preTitleDiff %}
                    {{ preTitleDiff|raw }}
                {% else %}
                    {{ translation.preTitle|default('-') }}
                {% endif %}
            </p>

            <h2>{{ 'Title'|trans({}, '') }}</h2>

            <p>
                {% if titleDiff is defined and titleDiff %}
                    {{ titleDiff|raw }}
                {% else %}
                    {{ translation.title|default('-') }}
                {% endif %}
            </p>

            <h2>{{ 'Subtitle'|trans({}, '') }}</h2>

            <p>
                {% if subTitleDiff is defined and subTitleDiff %}
                    {{ subTitleDiff|raw }}
                {% else %}
                    {{ translation.subTitle|default('-') }}
                {% endif %}
            </p>

            <h2 class="mt-4">Description</h2>
            <p>
                {% if descriptionDiff is defined %}
                    {{ descriptionDiff|raw }}
                {% else %}
                    {{ translation.description }}
                {% endif %}
            </p>

            <h2 class="mt-4">Content</h2>

            {% if contentRows is defined %}
                {{
                    include('@XutimCore/admin/content_fragment/content_diff.html.twig', {
                        rows: contentRows,
                        locale: content_context_language(),
                    })
                }}
            {% else %}
                {{
                    include('@XutimCore/admin/content_fragment/content.html.twig', {
                        fragments: translation.content,
                        locale: content_context_language(),
                    })
                }}
            {% endif %}
        </div>
    </div>
{% endblock %}
